{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM"],
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "types": []
  },
  "include": ["src/**/*"]
}
 